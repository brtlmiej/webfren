{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ESNext", "dom"],
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "dist/"
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "src/*/tests/*"
  ]
}